<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/instruction_item_padding"
    android:id="@+id/recipe_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">
    <TextView
        android:id="@+id/instruction"
        android:layout_marginStart="@dimen/instruction_item_margin_start"
        android:layout_marginEnd="@dimen/instruction_item_margin_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="5"
        android:textSize="@dimen/instruction_item_text_size"
        tools:text="Boil for 30 min."
        tools:textSize="18sp"
        tools:textStyle="bold" />
</LinearLayout>